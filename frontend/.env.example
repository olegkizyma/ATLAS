# Frontend server port
ATLAS_PORT=8080

# Chat paraphrasing toggle (1=true, 0=false)
ATLAS_PARAPHRASE=1

# Goose Web API base URL (auto-detects if unset)
GOOSE_BASE_URL=http://127.0.0.1:3000
# Goose secret key header value for /reply (if configured server-side)
GOOSE_SECRET_KEY=test

# Atlas Core base URL (used for chat orchestration and remote TTS)
ATLAS_CORE_URL=http://127.0.0.1:8000

# Local Ukrainian TTS service URL
UKRAINIAN_TTS_URL=http://127.0.0.1:3000/tts

# TTS defaults
TTS_PROVIDER_DEFAULT=local   # local | gemini | google
TTS_VOICE_DEFAULT=default

# Agent-specific TTS overrides (optional): ATLAS/GOOSE/GRISHA
# TTS_PROVIDER_ATLAS=gemini
# TTS_VOICE_ATLAS=uk-female-1
# TTS_PROVIDER_GOOSE=local
# TTS_VOICE_GOOSE=uk-male-1
# TTS_PROVIDER_GRISHA=google
# TTS_VOICE_GRISHA=uk-neutral
